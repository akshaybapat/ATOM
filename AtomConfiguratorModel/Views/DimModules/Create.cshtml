@model AtomConfiguratorModel.Models.DimModule

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "DimModules", FormMethod.Post, new { @class = "form-crud" })) 
{
    @Html.AntiForgeryToken()
    
    <div>
        <h4>DimModule</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.ModuleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(model => model.ModuleName)
                @Html.ValidationMessageFor(model => model.ModuleName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KeyBuilding, "KeyBuilding", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.DropDownList("KeyBuilding", String.Empty)
                @Html.ValidationMessageFor(model => model.KeyBuilding)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
