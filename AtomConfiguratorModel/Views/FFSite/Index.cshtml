@*@model AtomConfiguratorModel.Models.DimFacility*@
@model AtomConfiguratorModel.Models.FFSite

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    <style>
        .formbutton {
            width: 100px;
            font-weight: bold;
            color: white;
            border: 0 none;
            border-radius: 25px;
            background-color: #217dbb;
            border-color: white;
            cursor: pointer;
            padding: 10px 5px;
            margin: 10px 5px;
        }
    </style>
    <style>

        .highlight { background-color: #b0c9ff; border-radius: 15px; }

       

        #resultset td:hover {
             cursor: pointer;
        }

               
        .btn {
            border-radius: 15px;
        }

            select {
            border: 1px solid rgba(0, 15, 36, 0.3);
            padding: 3px;
            padding-left: 1.5em;
            padding-right: 0.5em;
            border-radius: 15px;
        }
    </style>

    @Scripts.Render("~/bundles/modernizr")
    <link rel=StyleSheet href="../Content/multiStepForm.css" type="text/css">
    <link rel=StyleSheet href="../Content/bootstrap.css" type="text/css">

</head>
<body style="margin: 0; padding: 0; height:0">

    <div class="navbar navbar-inverse navbar-fixed-top" style="background-image: linear-gradient(#04519b, #044687 60%, #033769);">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Flextronics ATOM", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>


    <form id="msform">
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active" style="color:black">Site Selection</li>
            <li style="color:black">Building Selection</li>
            <li style="color:black">Module Selection</li>
        </ul>
        <!-- fieldsets -->
        <fieldset style="margin:0 10%">
        
            <h3 class="fs-subtitle">Select your site</h3>
            @Html.ValidationSummary(true)

            <div class="form-control-static" style="align-self:center">
                @Html.DropDownListFor(model => model.ListRegions, new SelectList(ViewBag.KeyRegion), "Select a Region", new { id = "RegionID" })
                @Html.ValidationMessageFor(model => model.ListRegions)
            </div>

            <div id="CountriesDivID" class="form-control-static" style="align-self:center">
                <select id="CountriesID">Select a Country</select>
                @Html.ValidationMessageFor(model => model.ListCountries)
            </div>

            <div id="FacilitiesDivID" class="form-control-static" style="align-self:center">
                <select id="FacilitiesID">Select a Site</select>
                @Html.ValidationMessageFor(model => model.ListFacilities)
            </div>

            <input id="Next-ToBuildingSelection" type="button" name="next" class="next action-button" value="Next" />
        </fieldset>

        <fieldset style="margin:0 10%">
            <h3 class="fs-subtitle">Building Selection</h3>


            <table id="buildingsresultset" class="table table-bordered table-responsive" style="border-radius:15px;">
                <tr >
                    <th>
                        &nbsp; &nbsp; &nbsp; Building
                    </th>
                </tr>
            </table>


            <!--<div class="col-md-12" id="BuildingsDivID" style="align-self:center ">
                <select id="BuildingsID" name="Buildings"></select>
                @Html.ValidationMessageFor(model => model.ListBuildings)
            </div>-->

            <input id="PreviousButton" type="button" name="previous" class="previous action-button" value="Previous" style="background-color: #217dbb">

            <input id="EditBuildingButton" type="button" name="edit" class="action-button" value="Edit" style="background-color: #ffa617">

            <input id="DeleteBuildingButton" type="button" name="delete" class="action-button" value="Delete" style="background-color: #d62c1a">

            <input id="Next-ToModuleSelection" type="button" name="next" class="next action-button" value="Next" />

        </fieldset>
        <fieldset style="margin:0 10%">

            <h3 class="fs-subtitle">Module Selection</h3>

            <table id="modulesresultset" class="table table-bordered table-responsive" style="border-radius:15px;">
                <tr>
                    <th>
                        &nbsp; &nbsp; &nbsp; Module
                    </th>
                </tr>
            </table>


            <!--<div class="col-md-12" id="ModulesDivID" style="align-self:center ">
                <select id="ModulesID" name="Modules"></select>
                @Html.ValidationMessageFor(model => model.ListModules)
            </div>-->

            <input id="PreviousButton" type="button" name="previous" class="previous action-button" value="Previous" style="background-color: #217dbb">

            <input id="EditModuleButton" type="button" name="edit" class="action-button" value="Edit" style="background-color: #ffa617">

            <input id="DeleteModuleButton" type="button" name="delete" class="action-button" value="Delete" style="background-color: #d62c1a">

            <input id="NextButton" type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
    </form>



    <!-- jQuery -->
    @Scripts.Render("~/bundles/jquery")
    <!-- <script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script> -->
    <!-- jQuery easing plugin -->
    <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/bundles/jqueryval")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/FFSiteForm.js")"> </script>
    <script src="../Scripts/multiStepForm.js" type="text/javascript"></script>
    
    @Scripts.Render("~/bundles/bootstrap")
   </body>
</html>
