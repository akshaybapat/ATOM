@model AtomConfiguratorModel.Models.MetricConfiguration

<form id="msform" method="post">
    <!-- progressbar -->
    <ul id="progressbar" style="min-width:650px;">
        <li class="active" style="color:black; width: 20%;">Metric Selection</li>
        <li style="color:black ;width: 20%;">Site Selection</li>
        <li style="color:black ; width: 20%;">Customer Selection</li>
        <li style="color:black ; width: 20%;">Metric Data Configuration</li>
        <li style="color:black ; width: 20%;">Assign Ownership</li>

    </ul>
    <!-- fieldsets -->
    <div>
        <fieldset style="margin:0 10%; min-width:600px;">

            <h3>Select the Metric you wish to configure</h3>
            @Html.ValidationSummary(true)

            <div class="form-group">

                <div>
                    @Html.DropDownList("KeyMetricID", String.Empty)
                    @Html.ValidationMessageFor(model => model.KeyMetricID)
                </div>
            </div>

            <input type="button" name="next" class="next action-button" value="Next" />

        </fieldset>

        <fieldset style="margin:0 10%; min-width:600px;">

            <h3>Associate Metric with Site</h3>

            <div class="form-group">

                <div>
                    @Html.DropDownList("KeySiteID", String.Empty)
                    @Html.ValidationMessageFor(model => model.KeySiteID)
                </div>
            </div>

            <div id="bigblue" class="modal"><!-- Place at bottom of page --></div>

            <input type="button" name="previous" class="previous action-button" value="Previous" style="background-color: #217dbb">

            <input type="button" name="next" class="next action-button" value="Next" />

        </fieldset>


        <fieldset style="margin:0 10%; min-width:600px;">

            <h3>Associate Metric with Customer</h3>

            <div class="form-group">

                <div>
                    @Html.DropDownList("KeyBusinessPartnerID", String.Empty)
                    @Html.ValidationMessageFor(model => model.KeyBusinessPartnerID)
                </div>
            </div>

            <div id="wait" class="modal"><!-- Place at bottom of page --></div>

            <input type="button" name="previous" class="previous action-button" value="Previous" style="background-color: #217dbb">

            <input type="button" name="next" class="next action-button" value="Next" />


        </fieldset>

        <fieldset style="margin:0 10%; min-width:600px;">

            <h3>Metric Data Configuration</h3>

            <div class="form-group">
                @Html.LabelFor(model => model.Goal, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Goal)
                    @Html.ValidationMessageFor(model => model.Goal)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Red, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Red)
                    @Html.ValidationMessageFor(model => model.Red)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Green, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Green)
                    @Html.ValidationMessageFor(model => model.Green)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Alert, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Alert)
                    @Html.ValidationMessageFor(model => model.Alert)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Alert_MasterDataChange, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Alert_MasterDataChange)
                    @Html.ValidationMessageFor(model => model.Alert_MasterDataChange)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Alert_SystemErrors, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Alert_SystemErrors)
                    @Html.ValidationMessageFor(model => model.Alert_SystemErrors)
                </div>
            </div>

            <div id="wait" class="modal"><!-- Place at bottom of page --></div>

            <input type="button" name="previous" class="previous action-button" value="Previous" style="background-color: #217dbb">

            <input type="button" name="next" class="next action-button" value="Next" />

        </fieldset>


        <fieldset style="margin:0 10%; min-width:600px;">

            <h3>Assign Ownership</h3>

            <div class="form-group">
                Metric Owner
                <div>
                    @Html.EditorFor(model => model.MetricOwner)
                    @Html.ValidationMessageFor(model => model.MetricOwner)
                </div>
            </div>

            <div class="form-group">
                Metric Manager
                <div>
                    @Html.EditorFor(model => model.MetricManager)
                    @Html.ValidationMessageFor(model => model.MetricManager)
                </div>
            </div>

            <div id="wait" class="modal"><!-- Place at bottom of page --></div>

            <input type="button" name="previous" class="previous action-button" value="Previous" style="background-color: #217dbb">

            <input id="Finish" type="submit" name="next" class="action-button" value="Finish" />


        </fieldset>

    </div>
</form>



