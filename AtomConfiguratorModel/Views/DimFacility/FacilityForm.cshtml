@*@model AtomConfiguratorModel.Models.DimFacility*@
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <link rel=StyleSheet href="../Content/multiStepForm.css" type="text/css">
    <link rel=StyleSheet href="../Content/bootstrap.css" type="text/css">
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>


    <form id="msform">
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active" style="color:black">Account Setup</li>
            <li style="color:black">Social Profiles</li>
            <li style="color:black">Personal Details</li>
        </ul>
        <!-- fieldsets -->
        <fieldset>
            <h2 class="fs-title">Enter the desired Facility</h2>
            <h3 class="fs-subtitle">Select your site</h3>
            @Html.ValidationSummary(true)
            <div class="col-md-12" style="align-self:center">
            @Html.DropDownList("Region", new SelectList(ViewBag.KeyRegion), "Select a Region", new { id = "RegionID" })
            </div>
            <div class="col-md-12" id="CountriesDivID" style="align-self:center ">
                <select id="CountriesID" name="Countries"></select>
            </div>
            <div class="col-md-12" id="FacilitiesDivID" style="align-self:center">
                <select id="FacilitiesID" name="Facilities"></select>
            </div>
            <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>

        <fieldset>
            <h2 class="fs-title">Social Profiles</h2>
            <h3 class="fs-subtitle">Your presence on the social network</h3>
            <input type="text" name="twitter" placeholder="Twitter" />
            <input type="text" name="facebook" placeholder="Facebook" />
            &nbsp; <input type="text" name="gplus" placeholder="Google Plus" /> &nbsp; &nbsp; &nbsp; 
            <input type="button" name="previous" class="previous action-button" value="Previous" />
            <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Personal Details</h2>
            <h3 class="fs-subtitle">We will never sell it</h3>
            <input type="text" name="fname" placeholder="First Name" />
            <input type="text" name="lname" placeholder="Last Name" />
            <input type="text" name="phone" placeholder="Phone" />
            &nbsp; <textarea name="address" placeholder="Address"></textarea> &nbsp; &nbsp; &nbsp; 
            <input type="button" name="previous" class="previous action-button" value="Previous" />
            <input type="submit" name="submit" class="submit action-button" value="Submit" />
        </fieldset>
    </form>

    <!-- jQuery -->
    <script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
    <!-- jQuery easing plugin -->
    <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
    <script src="../Scripts/multiStepForm.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DropDown.js")"> </script>

    @* @Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
   @* @RenderSection("scripts", required: false) *@
</body>
</html>
