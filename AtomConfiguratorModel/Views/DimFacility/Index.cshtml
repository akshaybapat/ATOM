@model IEnumerable<AtomConfiguratorModel.Models.DimFacility>

@{
    ViewBag.Title = "Index";
}

<div class="form-crud list-large" >
    <h2>Facilities</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-hover table-bordered table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SiteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DimCountry.CountryName)
            </th>
            <th>
                Functions
            </th>
            </tr>

        @foreach (var item in Model)
        {
         <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SiteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DimCountry.CountryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
         </tr>
        }

    </table>
</div>